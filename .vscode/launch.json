{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug as First",
            "program": "${workspaceRoot}/target/debug/rustheus",
            "args": ["-f"],  //launch as bootstrap node
            "cwd": "${workspaceRoot}/target/debug/",
            "preLaunchTask": "build",
            "terminal": "integrated",
            "sourceLanguages": ["rust"],
            "env": {
                "RUST_LOG":"debug,handler=trace",
                "RUST_BACKTRACE":"full"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug as Third",
            "program": "${workspaceRoot}/target/debug/rustheus",
            "args": ["-n","3"],     //launch as third client
            "cwd": "${workspaceRoot}/target/debug/",
            "preLaunchTask": "build",
            "terminal": "integrated",
            "sourceLanguages": ["rust"],
            "env": {
                "RUST_LOG":"debug,handler=trace",
                "RUST_BACKTRACE":"full"
            }
        }
    ]
}